<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Allin K Beauty</title>
    <link rel="stylesheet" href="@Url.Content("~/styles/font.css")">
    <link rel="stylesheet" href="@Url.Content("~/styles/global.css")">
    <link rel="stylesheet" href="@Url.Content("~/styles/layout.css")">
    <link rel="stylesheet" href="@Url.Content("~/styles/main.css")">
    <link rel="stylesheet" href="@Url.Content("~/styles/swiper.css")">
    <link rel="stylesheet" href="@Url.Content("~/css/site.css")">

    <script src="@Url.Content("~/js/lib/gsap.min.js")"></script>
    <script src="@Url.Content("~/js/lib/ScrollTrigger.min.js")"></script>
    <script src="@Url.Content("~/js/lib/SplitText.min.js")"></script>
    <script src="@Url.Content("~/js/lib/ScrollSmoother.min.js")"></script>
    <script src="@Url.Content("~/js/lib/swiper.js")"></script>
    <script src="@Url.Content("~/js/utils/async-utils.js")" async></script>
    <script src="@Url.Content("~/js/utils/defer-utils.js")" defer></script>
    <script src="@Url.Content("/js/layout/common/view.js")" defer></script>
    <script src="@Url.Content("~/js/jquery/jquery.min.js")"></script>

</head>
<body>
    <div id="container">
        <div id="wrapper">
            <header id="header" class="header header--sub" role="banner" data-skip>
                @Html.Partial(Url.Content("_Header"))
            </header>
            <script src="~/js/layout/common/header.js"></script>
            <div id="smooth-wrapper">
                <div id="smooth-content">
                    @RenderBody()
                    @Html.Partial(Url.Content("_Footer"))
                </div>
            </div>
        </div>
    </div>
    
    <script src="@Url.Content("~/js/site.js")"></script>
    @RenderSection("Scripts", required: false)

    <div id="loading-overlay" style="display:none" aria-live="polite" aria-busy="true" role="status">
        <!-- GIF/APNG/SVG 파일 경로로 교체 -->
        <img id="loading-img" src="@Url.Content("~/images/loading/LoadingOne.gif")" alt="로딩 중…" />
    </div>

    <script async src="https://www.googletagmanager.com/gtag/js?id=G-T2X2Z0F5LZ"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());

        gtag('config', 'G-T2X2Z0F5LZ');
    </script>
</body>
</html>
@{
	Layout = null;
}
<!DOCTYPE html>
<html lang="ko">
<head>
	<meta charset="utf-8">
	<title>접근 차단</title>
	<link href="@Url.Content("~/css/styles.css")" rel="stylesheet" />
	<style>
		.item {
			position: absolute;
			top: 40%;
			left: 50%;
			transform: translate(-50%,-50%);
			text-align: center; /* 중앙 정렬 */
		}

			.item div {
				margin: 5px 0; /* 위아래 간격 */
			}

			.item .ip-text {
				color: #E06744;
			}
	</style>
</head>
<body>
	<div class="item">
		<div><img src="@Url.Content("~/Images/block/1.jpg")"></div>
		<div class="mt-4">This IP address has been blocked.</div>
		<div class="ip-text">Client IP address : (@ViewBag.ip) </div>
		<div class="mt-4">Please contact the system administrator.(031-478-3025)</div>
	</div>
</body>
</html>
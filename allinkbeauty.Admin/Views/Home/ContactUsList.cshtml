    <div class="row mt-4">
        <div class="col-xl-12">
            <div class="card-body">
                <table class="table table-bordered table-hover table-sm mb-0">
                    <thead class="table-light">
                        <tr class="text-center">
                            <th style="width:5%;">No.</th>
                            <th style="width:5%;">Name</th>
                            <th style="width:10%;">E-mail</th>
                            <th style="width:10%;">Number</th>
                            <th>Detail</th>
                            <th style="width:5%;">작성일</th>
                        </tr>
                    </thead>
                    <tbody>

                        @if(Model.Any())
                        {
                            int no = pageno;
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td class="text-center">@no</td>
                                    <td>@item.Name</td>
                                    <td>@item.Email</td>
                                    <td>@item.Number</td>
                                    <td>@Html.Raw((item.Detail ?? "").Replace("\r\n", "<br>").Replace("\n", "<br>"))</td>
                                    <td class="text-center">@item.RegDate.ToString("yyyy.MM.dd")</td>
                                </tr>
                                --no;
                            }
                        }
                        else
                        {
                            <tr><td colspan="6" style="text-align:center">등록된 내용이 없습니다.</td></tr>
                        
                        }

                    </tbody>
                </table>

                @Html.Partial(Url.Content("_Pagination"))

            </div>
        </div>
    </div>

</div>


